pipeline {
    agent any

    parameters {
        choice(
            name: 'ACTION',
            choices: ['up', 'down'],
            description: 'Select "up" to create/apply infrastructure, "down" to destroy it'
        )
    }

    environment {
        TF_WORKING_DIR = 'eks-cluster'
    }

    stages {
        stage('Checkout SCM') {
            steps {
                git branch: 'master', url: 'https://github.com/afrozfatma2/eks-cluster.git'
            }
        }

        stage('Terraform Init') {
            steps {
                dir("${TF_WORKING_DIR}") {
                    sh 'terraform init'
                }
            }
        }

        stage('Terraform Plan / Destroy Plan') {
            steps {
                dir("${TF_WORKING_DIR}") {
                    script {
                        if (params.ACTION == 'up') {
                            sh 'terraform plan -out=tfplan'
                        } else {
                            sh 'terraform plan -destroy -out=tfplan-destroy'
                        }
                    }
                }
            }
        }

        stage('Terraform Apply / Destroy') {
            steps {
                dir("${TF_WORKING_DIR}") {
                    script {
                        if (params.ACTION == 'up') {
                            sh 'terraform apply -auto-approve tfplan'
                        } else {
                            sh 'terraform apply -auto-approve tfplan-destroy'
                        }
                    }
                }
            }
        }
    }

    post {
        success {
            script {
                if (params.ACTION == 'up') {
                    echo 'EKS cluster created/updated successfully!'
                } else {
                    echo 'EKS cluster resources destroyed successfully!'
                }
            }
        }
        failure {
            echo 'Terraform FAILED!'
        }
    }
}
