pipeline {
    agent any

    parameters {
        choice(name: 'ACTION', choices: ['up', 'down'], description: 'Choose "up" to create cluster or "down" to destroy it')
    }

    environment {
        AWS_REGION = "ap-south-1"
        TF_DIR     = "terraform"  // Directory where your eks.tf is
    }

    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Terraform Init') {
            steps {
                dir(env.TF_DIR) {
                    sh 'terraform init'
                }
            }
        }

        stage('Terraform Plan') {
            steps {
                dir(env.TF_DIR) {
                    script {
                        if (params.ACTION == 'up') {
                            sh 'terraform plan -out=tfplan'
                        } else {
                            sh 'terraform plan -destroy -out=tfplan'
                        }
                    }
                }
            }
        }

        stage('Terraform Apply / Destroy') {
            steps {
                dir(env.TF_DIR) {
                    script {
                        if (params.ACTION == 'up') {
                            sh 'terraform apply -auto-approve tfplan'
                        } else {
                            sh 'terraform destroy -auto-approve'
                        }
                    }
                }
            }
        }
    }

    post {
        success {
            script {
                if (params.ACTION == 'up') {
                    echo "EKS Cluster created successfully!"
                } else {
                    echo "EKS Cluster destroyed successfully!"
                }
            }
        }
        failure {
            echo "Terraform action failed!"
        }
    }
}
