pipeline {
    agent any

    environment {
        TF_WORKING_DIR = 'eks-cluster' 
    }


    stages {
        stage('Checkout SCM') {
            steps {
                // Checkout the repo (branch can be changed)
                git branch: 'master', url: 'https://github.com/afrozfatma2/eks-cluster.git'
            }
        }

        stage('Terraform Init') {
            steps {
                dir("${TF_WORKING_DIR}") {
                    sh 'terraform init'
                }
            }
        }

        stage('Terraform Plan') {
            steps {
                dir("${TF_WORKING_DIR}") {
                    sh 'terraform plan -out=tfplan'
                }
            }
        }

        stage('Terraform Apply') {
            steps {
                dir("${TF_WORKING_DIR}") {
                    sh 'terraform apply -auto-approve tfplan'
                }
            }
        }
    }

    post {
        success {
            echo 'EKS cluster created successfully!'
        }
        failure {
            echo 'Terraform apply failed!'
        }
    }
}
